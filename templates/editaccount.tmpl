{% extends "base.tmpl" %}

{% block head %}
    {{ parent() }}
    <style type="text/css">
        .important { color: #336699; }
    </style>
{% endblock %}
{% block content %}
<h1>Edit Account</h1>
<form action="{{php_self}}" method="post">
    Username:<br />
    <b>{{username}}</b>
    <br /><br />
    First name:<br />
    <input type="text" name="firstname" value="{{firstname}}" />
    <br /><br />
    Surname:<br />
    <input type="text" name="surname" value="{{surname}}" />
    <br /><br />
    E-Mail Address:<br />
    <input type="text" name="email" value="{{email}}" />
    {% if emailshow == 1%}
    <input type="checkbox" name="emailshow" value="1" checked><i>(check to allow other members to see your email address on the members list)</i>
    {% else %}
    <input type="checkbox" name="emailshow" value="1"><i>(check to allow other members to see your email address on the members list)</i>
    {% endif %} 
    <br /><br />
    Password:<br />
    <input type="password" name="password" value="" /><br />
    <i>(leave blank if you do not want to change your password)</i>
    <br /><br />
    <input type="submit" value="Update Account" />
</form>
{% endblock %}
