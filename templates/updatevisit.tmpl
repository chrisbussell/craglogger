{% extends "base.tmpl" %}

{% block head %}
    {{ parent() }}
    <style type="text/css">
        .important { color: #336699; }
    </style>
{% endblock %}
{% block content %}
    <h2>Update crag visit</h2>
    <table>
      <tr class="heading">
        <td>Date</td>
        <td>Venue</td>
        <td>Area</td>
        <td>Conditions</td>
        <td>Pub</td>
        <td>Rained Off</td>
      </tr> 

      {% for d in data %}
	<form method="post" action="{{ php_self }}">
        <input type="hidden" name="cragvisit_id" value="{{ d.cragvisit_id|escape }}"</td>
       <tr>
        <td><input type="date" name="date" value="{{ d.date|escape}}"</td>
        <td>{{ d.venue|escape }}</td>
        <td>{{ d.area|escape }}</td>
        <td><input type="text" name="conditions" value="{{ d.conditions|escape }}"</td>
        <td><input type="text" name="pub" value="{{ d.pub|escape }}"</td>
	{% if d.rainedoff == 1 %}
        <td><input type="checkbox" name="rainedoff" value="1" checked></td>
	{% else %}
        <td><input type="checkbox" name="rainedoff" value="1"</td>
	{% endif %}

        <td><input type="submit" name="submit" value="Update Crag"></td>
		</form>
      	{% endfor %}
	 </tr>
        </table>
{% endblock %}
