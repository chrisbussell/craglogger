{% extends "base.tmpl" %}

{% block content %}
<h1>Register</h1>
<form action="{{ php_self }}" method="post">
	<div>
		<label for="firstname">Your firstname:</label>
		<br/>
		<input type="text" name="firstname" id="firstname" value="" />
		<b>{{errFirstname}}</b>
	</div>

	<div>
		<label for="surname">Your surname:</label>
		<br/>
		<input type="text" name="surname" id="surname" value="" />
		<b>{{errSurname}}</b>
	</div>

	<div>
		<label for="username">Your username (used to login to the site):</label>
		<br/>
		<input type="text" name="username" id="username" value="" />
		<b>{{errUsername}}</b>
	</div>

	<div>
		<label for="email">Your email</label>
		<br/>
		<input type="text" name="email" id="email" value="" />
		<b>{{errEmail}}</b>
	</div>

	<div>
		<label for="emailshow">
			<input type="checkbox" name="emailshow" id="emailshow" value="1" checked/>
			<br/> <i>(check to allow other members to see your email address)</i>
		</label>
	</div>

	<div>
		<label for="password">Choose password:</label>
		<br/>
		<input type="password" name="password" id="password" value="" />
		<br/> <i>(6 characters or more)</i>
		<b>{{errPassword}}</b>
	</div>

	<div>
		<input type="submit" value="Register" />
	</div>
</form>
{% endblock %}
