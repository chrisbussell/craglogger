			WELCOME - LOGGED OUT SESSION
        	{% endif %}
		<ul class="fancyNav">
			<li id="home">
				<a href="/craglogger/home.php" class="homeIcon">Home</a>
			</li>
			{% if sid == false %}
			<li>
				<a href="about-us">About us</a>
			</li>
			<li>
				<a href="upcomingvenues">Upcoming venues</a>
			</li>
			<li>
				<a href="register.php">Sign up</a>
			</li>
			<li>
				<a href="login.php">Log in</a>
			</li>
			{% endif %}
        	
		{% if sid == true %}
			<li>
				<a href="/craglogger/dashboard/craglist.php">Log my visits</a>
			</li>
			<li>
				<a href="/craglogger/dashboard/cragattendence.php">Crag visits 2014</a>
			</li>
			<li>
				<a href="/craglogger/dashboard/cragstats.php">Crag stats 2014</a>
			</li>
			<li>
				<a href="/craglogger/dashboard/memberlist.php">Members list</a>
			</li>
			<li>
				<a href="/craglogger/dashboard/editaccount.php">My account</a>
			</li>
			<li>
				<a href="/craglogger/logout.php">Log out</a>
			</li>
			{% endif %}

		{% if admin == true %}
			<li>
				<a href="/craglogger/dashboard/admin.php">Admin</a>
			</li>
			{% endif %}
		</ul>
		<hr>{% endblock %}</div>

	<div id="content">
		{% block content %}Homepage content



	{% endblock %}
	</div>

	<div id="footer">
		{% block footer %}
		<hr>
		CRAG LOGGER FOOTER. Last updated on: {{ updated }}.
                &copy; Copyright 2014. 
            {% endblock %}
	</div>
	<!-- Start Javascript includes -->
	<script type="text/javascript" src="/craglogger/html/js/base/modernizr.custom.23562.js"></script>
