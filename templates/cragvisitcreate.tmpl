{% extends "base.tmpl" %}

{% block head %}
    {{ parent() }}
{% endblock %}
{% block content %}
<h1>Add A Visit</h1>
{% if nocragselected == 1 %}
<i><b>Please select a crag for this visit</b></i>
{% endif %}
<br>
{% if nodate == 1 %}
<i><b>Please choose a date for this visit</b></i>
{% endif %}
<p>
<form action="{{php_self}}" method="post">
Choose a crag for this visit:
<table>
<tr>
<td>Crag</td>
<td>Area</td>
<td>Select crag</td>
</tr>
{% for d in data %}
<tr>
<td>{{ d.venue|escape}}</td>
<td>{{ d.area|escape }}</td>
<td><input type="radio" name="cragdetail_id" value="{{d.cragdetail_id}}"></td>
</tr>
{% endfor %}
</table>
<table>
<tr>
<td>Crag not listed, just add a <a href="cragcreate.php">new crag</a>
</tr>
</td>
</table>
<hr>
<p>
Add details for this visit<p>
<table>
    Date <i>(2014/03/01)</i><br />
    <input type="date" name="date" value="" />
    <br /><br />
    Conditions <br />
    <input type="text" name="conditions" value="" />
    <br /><br />
    Pub:<br />
    <input type="text" name="pub" value="" />
    <br /><br />
    Rained Off:<br />
    <input type="checkbox" name="rainedoff" value="1" />
    <br /><br />
    <input type="submit" name="submit" value="Add the Crag" />
</form>
{% if success == 1%}
<i><b>Thank you this visit has been added</b></i>
{% endif %}
{% endblock %}


