{% extends "base.tmpl" %}
{% if year == '2014' %}
	{% set page_class = 'crag-stats' %}
{% else %}
	{% set page_class = 'visit-archive' %}
{% endif %}

{% block class %}
 class="{{page_class}}" 
{% endblock %}

{% block content %}
<h1>Crag Stats {{year}}</h1>
{% if weeksleft != '' %}
<i>{{weeksleft}} glorious weeks of summer left, get out there.</i>
{% endif %}
<br/>
{% if year != '2014' %}
<legend><b>Choose the year you want to view</b></legend>
<form action="{{php_self}}" method="post">
<table class="flexitable">
   <tr>
        <td>
                <select name ="year">
                {% for y in years %}
                        {% if y['year'] == year %}
                                <option value=" {{ y['year'] }}" selected="selected">{{ y['year'] }}</option>
                        {% else %}
                                <option value="{{ y['year'] }}">{{ y['year'] }}</option>
                        {% endif %}
                {% endfor %}
                </select>
      </td>
      <td><input type="submit" name="submit" value="Choose" /></td>
        </tr>
</table>
</form>





